<?xml-stylesheet type="text/css" href="chrome://znotes/skin/adviewer.css" ?>

<!DOCTYPE window SYSTEM "chrome://znotes/locale/adviewer.dtd">

<overlay id="adviewer" xmlns="http://www.mozilla.org/keymaster/gatekeeper/there.is.only.xul">

  <script type="application/x-javascript" src="chrome://znotes/content/adviewer.js" />

  <tabs id="addonsTabs">
    <tab id="addonsTabAd" pack="start" label="&ad_tab_caption;" selected="true" />
  </tabs>

  <tabpanels id="addonsPanels">
    <tabpanel id="noteAdViewPanel" flex="1">
      <browser id="adBrowser"
        type="content"
        src="about:blank"
        flex="1" />
    </tabpanel>
  </tabpanels>

</overlay>
