<?xml-stylesheet type="text/css" href="chrome://znotes/skin/documents/text/editor.css" ?>

<!DOCTYPE overlay SYSTEM "chrome://znotes/locale/documents/text/editor.dtd">

<overlay id="text"
  xmlns="http://www.mozilla.org/keymaster/gatekeeper/there.is.only.xul">

  <stringbundleset id="znotes_stringbundleset" />
  <commandset id="znotes_commandset">
    <command id="edtBold" />
    <command id="edtItalic" />
    <command id="edtUnderline" />
    <command id="edtForeColor" />
    <command id="edtJustifyCenter" />
    <command id="edtJustifyLeft" />
    <command id="edtJustifyRight" />
    <command id="edtJustifyFull" />
  </commandset>
  <keyset id="znotes_keyset" />
  <popupset id="znotes_popupset" />
  
  <toolbar id="toolBar" />

  <vbox id="editorView">

    <tabbox id="editorTabBox" flex="1">
      <hbox id="editorTabsHeader">
        <tabs id="editorTabs" hidden="true" pack="end">
          <tab id="editorTabDesign"
            pack="start"
            label="&edt_tab_design;"
            selected="true" />
        </tabs>
        <spacer pack="start" align="stretch" flex="1" />
        <toolbarbutton id="editorTabClose"
          hidden="true"
          pack="end"
          tooltiptext="&edt_tab_close;" />
      </hbox>
      <tabpanels id="editorPanels" flex="1">
        <tabpanel id="designPanel" pack="start" align="stretch" flex="1">
          <vbox id="designBox" pack="start" align="stretch" flex="1">
            <iframe id="designViewer"
              src="about:blank"
              type="content-primary"
              disablehistory="true"
              flex="1"
              pack="start"
              align="stretch"/>
            <textbox id="designEditor"
              class="plain"
              hidden="true"
              multiline="true"
              pack="start"
              align="stretch"
              flex="1" />
            <toolbox id="designToolBox" collapsed="true">
              <toolbar id="designToolBar0" mode="icons" collapsed="true" />
              <toolbar id="designToolBar" mode="icons">
                <menulist id="fontNameMenuList"
                  disableautoselect="false"
                  tooltiptext="&edt_font_name;">
                  <menupopup id="fontNameMenuPopup"/>
                </menulist>
                <textbox id="edtFontSize"
                  type="number" min="1" size="3"
                  tooltiptext="&edt_font_size;" />
                <toolbarseparator id="designToolBarSeparator1" />
                <toolbarbutton id="boldEditorButton"
                  type="checkbox"
                  class="menuitem-iconic"
                  tooltiptext="&edt_bold;"
                  command="edtBold" />
                <toolbarbutton id="italicEditorButton"
                  type="checkbox"
                  class="menuitem-iconic"
                  tooltiptext="&edt_italic;"
                  command="edtItalic" />
                <toolbarbutton id="underlineEditorButton"
                  type="checkbox"
                  class="menuitem-iconic"
                  tooltiptext="&edt_underline;"
                  command="edtUnderline" />
                <toolbarseparator id="designToolBarSeparator2" />
                <toolbarbutton id="foreColorEditorButton"
                  class="menuitem-iconic"
                  tooltiptext="&edt_fore_Ñolor;"
                  command="edtForeColor" />
                <toolbarseparator id="designToolBarSeparator3" />
                <toolbarbutton id="justifyCenterEditorButton"
                  type="checkbox"
                  class="menuitem-iconic"
                  tooltiptext="&edt_justify_center;"
                  command="edtJustifyCenter" />
                <toolbarbutton id="justifyLeftEditorButton"
                  type="checkbox"
                  class="menuitem-iconic"
                  tooltiptext="&edt_justify_left;"
                  command="edtJustifyLeft" />
                <toolbarbutton id="justifyRightEditorButton"
                  type="checkbox"
                  class="menuitem-iconic"
                  tooltiptext="&edt_justify_right;"
                  command="edtJustifyRight" />
                <toolbarbutton id="justifyFullEditorButton"
                  type="checkbox"
                  class="menuitem-iconic"
                  tooltiptext="&edt_justify_full;"
                  command="edtJustifyFull" />
                <toolbarseparator id="designToolBarSeparator4" />
                <toolbarbutton id="copyEditorButton"
                  class="menuitem-iconic"/>
                <toolbarbutton id="cutEditorButton"
                  class="menuitem-iconic"/>
                <toolbarbutton id="pasteEditorButton"
                  class="menuitem-iconic"/>
                <toolbarbutton id="deleteEditorButton"
                  class="menuitem-iconic"/>
                <toolbarseparator id="designToolBarSeparator4" />
                <toolbarbutton id="undoEditorButton"
                  class="menuitem-iconic"/>
                <toolbarbutton id="redoEditorButton"
                  class="menuitem-iconic"/>
              </toolbar>
            </toolbox>
          </vbox>
        </tabpanel>
      </tabpanels>
    </tabbox>
    
    <iframe id="printFrame"
      src="about:blank"
      type="content-primary"
      disablehistory="true"
      collapsed="true" />
    
  </vbox>

</overlay>
